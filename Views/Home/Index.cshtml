@{
    ViewData["Title"] = "WhatsApp Clone";
}

<h1>Welcome to WhatsApp Clone</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="list-group" id="userList">
                <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                    Active User List
                </a>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <input type="text" id="targetUserIdInput" placeholder="Target User ID" class="form-control" />
                </div>
                <div class="card-body">
                    <ul id="messagesList" class="list-unstyled"></ul>
                </div>
                <div class="card-footer">
                    <div class="input-group">
                        <input type="text" id="messageInput" class="form-control" placeholder="Type a message" />
                        <div class="input-group-append">
                            <button class="btn btn-primary" onclick="sendMessageToUser()">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script>
    <script type="text/javascript">
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .build();

        connection.on("ReceiveMessage", (fromUserId, message) => {
            const li = document.createElement("li");
            li.classList.add("list-group-item");
            li.textContent = `From ${fromUserId}: ${message}`;
            document.getElementById("messagesList").appendChild(li);
        });

        connection.start().then(() => {

            $.each(JSON.parse('@Html.Raw(ViewBag.UserList)'), function (k,v) {
                const userId =v.Username;
                const userListItem = document.createElement("a");
                userListItem.href = "#";
                userListItem.classList.add("list-group-item", "list-group-item-action");
                userListItem.textContent = userId;
                userListItem.onclick = () => {
                    document.getElementById("targetUserIdInput").value = userId;
                };
                document.getElementById("userList").appendChild(userListItem);
            })
            
        }).catch(err => console.error(err.toString()));

        function sendMessageToUser() {
            const targetUserId = document.getElementById("targetUserIdInput").value;
            const message = document.getElementById("messageInput").value;
            connection.invoke("SendMessageToUser", targetUserId, message).catch(err => console.error(err.toString()));
        }
    </script>
}
